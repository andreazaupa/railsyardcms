<div class="box maior left">
	<span class="box-top-title"><%= t 'admin.settings.general_settings' %></span>
	<%= form_for @setting, :url => admin_settings_path(@setting) do |f| %>
		<%= errors_for @setting %>
		<%= render :partial => "form", :object => @setting, :as => :setting, :locals => {:f => f} %>
		<div class="buttons"><%= submit_tag t('admin.general.save'), :class => "submit" %></div>
	<% end %>
</div>

