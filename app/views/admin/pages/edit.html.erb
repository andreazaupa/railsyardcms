<% content_for :secondmenu do %>
<ul>
	<li><%#= link_to "<span>#{t 'admin.general.available'}</span>".hs, "" %></li>
	<li><%#= link_to "<span>#{t 'admin.general.trash'}</span>".hs, "" %></li>
</ul>
<%= select_tag "language", options_from_collection_for_select(Language.all, 'short', 'name', @admin_editing_language), :onchange => remote_function(:url => editing_language_admin_pages_path, :with => "'admin_editing_language=' + this.value") %>
<% end %>

<% content_for :sidebar do %>
	<%= render :partial => "tree", :object => Page, :locals => {:lang => @admin_editing_language} %>
<% end %>

<div class="box maior left">
	<span class="box-top-title"><%= t 'admin.pages.properties_for_page' %> <%= @page.name %></span>
	<% form_for @page, :url => admin_page_path(@page) do |f| %>
		<%= error_messages_for :page %>
		<%= render :partial => "form", :object => @page, :locals => {:f => f, :lang => @admin_editing_language} %>
		<div class="buttons"><%= submit_tag t('admin.general.save'), :class => "submit" %>
		<%= link_to t('admin.general.back'), admin_pages_url, :class => "submit" %>
		<%= link_to t('admin.general.delete'), admin_page_url(@page), :method => :delete, :confirm => t('admin.pages.are_you_sure_to_delete', :name => @page.name), :class => "submit"  %></div>
	<% end %>
</div>

