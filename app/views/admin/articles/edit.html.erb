<% content_for :secondmenu do %>
<ul>
	<li><%#= link_to "<span>#{t 'admin.general.available'}</span>".hs, "" %></li>
	<li><%#= link_to "<span>#{t 'admin.general.trash'}</span>".hs, "" %></li>
</ul>
<% end %>

<div class="box maior left">
	<span class="box-top-title"><%= t 'admin.articles.edit_article' %> '<%= @article.title %>'</span>
	<% form_for @article, :url => admin_article_path(@article), :html => { :multipart => true } do |f| %>
		<%= error_messages_for :article %>
		<%= render :partial => "form", :object => @article, :locals => {:f => f} %>
		<%= hidden_field_tag "commit_type", "" %> 
		<div class="buttons"><%= submit_tag t('admin.general.save'), :class => "submit", :OnClick => "$('commit_type').value='save'" %> <%= submit_tag t('admin.general.save_and_close'), :class => "submit", :OnClick => "$('commit_type').value='save_and_close'" %> <%= link_to t('admin.general.back'), admin_articles_url, :class => "submit" %> <%= link_to t('admin.general.delete'), admin_article_url(@article), :method => :delete, :confirm => "Are you sure to delete '#{@article.title}' ?", :class => "submit"  %></div>
	<% end %>
	<div class="attach-support">
		<%= render :partial => "admin/assets/panel", :object => @article %>
	</div>
</div>


