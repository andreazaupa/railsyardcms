<% if @new_snippet %>
	<% destination = @new_snippet.article_layout ? edit_admin_article_layout_snippet_path(@new_snippet.article_layout.id, @new_snippet.id) : edit_admin_page_snippet_path(@new_snippet.page.id, @new_snippet.id) %>
	jQuery(document.getElementById('<%= @new_snippet.handler %>')).append("<%= escape_javascript(link_to 'edit', destination, :class => 'icon edit') %>").addClass("active_widget");
<% end %>


