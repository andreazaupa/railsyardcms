<div class='twolevels-menu<%= " #{object.div_class}" unless object.div_class.blank?%>'<%= " id='#{object.div_id}'" unless object.div_id.blank? %><%= " style='#{object.div_style}'" unless object.div_style.blank? %>>
	<ul>
		<% @first_level_pages.map do |p| %>
			<% if p.visible_in_menu && p.published && (!p.reserved || (p.reserved && current_user && current_user.is_privileged?)) %>
			    <% link_destination = (object.go_to_first_child && !p.children.blank? && p.children.first) ? p.children.first : p.pretty_url %>
				<li <%= "class =\"current\"" if p.id == @pg.id or @family_pages_ids.include?(p.id) %>><%= link_to p.name, get_yard_url(link_destination) %>
					<% unless p.children.blank? %>	
						<ul>
							<% p.children.map do |c| %>
								<li <%= "class =\"current-children\"" if c.id == @pg.id %>><%= link_to c.name, get_yard_url(c.pretty_url) %>
							<% end %>
						</ul>
					<% end %>
				</li>
			<% end %>
		<% end %>
	</ul>
</div>
